<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NetclanExplorerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#3A4AA4</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">#4B5DC0</item>
<!--        <item name="android:textAppearance">@style/MyTooltip.TextAppearance</item>-->
    </style>



    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="rippleColor">#C13700B3</item>
    </style>

    <style name="ThemeOverlay.App.Chip" parent="">
        <item name="colorOnSurface">@color/white</item>
    </style>

</resources>